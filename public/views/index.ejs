<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Chat Room</title>
	<link rel="stylesheet" type="text/css" href="style.css" src="">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
	<script type="text/javascript" src="/socket.io/socket.io.js"></script>
	<!-- this makes the handshake between the server and client -->
	<script>
		$(document).ready(function(){

			var socket = io();
			$('form').submit(function(){
				socket.emit("chat_msg", $('#msg').val());
				$('#msg').val('');
				return false;
			});
			socket.on("chat_msg", function(mess){
				$('#messages').append($('<li>').text(mess));
				window.scrollTo(0, document.body.scrollHeight);
			})
		});
	</script>
</head>
<body>
	<h1>Welcome to the Chat Room</h1>
	<ul id="messages"></ul>
    <form action="">
      <input id="msg"><button>Send</button>
    </form>
</body>
</html>



























